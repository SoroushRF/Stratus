# --- Intelligence Core ---
# Get your API key: https://aistudio.google.com/app/apikey
GEMINI_API_KEY="AIzaSy..."

# Get your API key: https://app.tomorrow.io/development/keys
WEATHER_API_KEY="wXyZ..."
# Toggle to use live weather data (true) or mock data (false)
USE_LIVE_WEATHER="true"
# Toggle to use mock AI responses (useful for saving tokens during dev)
MOCK_AI="false"

# --- Database Layer (Supabase) ---
# Project Settings -> API
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-public-key"
# Project Settings -> Database -> Connection Pooling (if using Prisma later) or Service Role for admin tasks
SUPABASE_SERVICE_ROLE_KEY="your-service-role-secret-key"

# --- Identity Layer (Auth0) ---
# Applications -> Settings
AUTH0_SECRET='use_openssl_rand_hex_32_to_generate_this'
AUTH0_BASE_URL='http://localhost:3000'
AUTH0_ISSUER_BASE_URL='https://your-tenant.us.auth0.com'
AUTH0_CLIENT_ID='your-client-id'
AUTH0_CLIENT_SECRET='your-client-secret'

# --- Optional / Experimental ---
# Enable or disable visual debug logs in console
NEXT_PUBLIC_DEBUG_MODE="true"
