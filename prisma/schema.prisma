generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id             String   @id @default(uuid())
  email          String   @unique
  name           String?
  campusLocation String
  classes        Class[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Class {
  id        String   @id @default(uuid())
  name      String
  startTime String
  endTime   String
  days      String
  location  String
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model WeatherLog {
  id           String   @id @default(uuid())
  temp         Float
  condition    String
  precipChance Float
  classId      String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
